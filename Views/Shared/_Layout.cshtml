<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>Game Now</title>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
    <link href="~/css/Project/Header.css" rel="stylesheet"/>
    <link rel="stylesheet" href="~/dependencies/Bootstrap_project/css/bootstrap.css"/>
</head>
<body>
<!-- <partial name="_CookieConsentPartial" /> -->
<script src="~/dependencies/jquery/dist/jquery.js"></script>
<script src="~/dependencies/react/umd/react.development.js"></script>
<script src="~/dependencies/react-dom/umd/react-dom.development.js"></script>
<div class="container body-content">
    <nav class="navbar navbar-expand-lg navbar-light bg-light" id="navbarHeader">
        <a class="navbar-brand"></a>
        <a href="/">Gaming Webshop</a>
        <div class="nav-link">
            <a href="/product/allproducts">All Products</a>
        </div>
        <form class="form-inline" action="/product/search" method="get">
            <input class="form-control mr-sm-2" type="search" placeholder="Search" name="query" 
                   aria-label="Search"/>
            <button class="btn btn-outline-primary my-2 my-sm-2" type="submit" value="Submit">
                Search
            </button>
        </form>
        <ul class="navbar-nav">
            @* <li class="nav-item"> *@
            @*     <a class="nav-link dropdown-toggle fas fa-user fa-lg fa-lg mt-2 mr-2" *@
            @*        data-toggle="dropdown" title="Your Profile" id="ProfileNavElement" *@
            @*        data-placement="top" style="margin-left: 0.5em; color: deepskyblue" *@
            @*        href="javascript:void(0)"> *@
            @*     </a> *@
            @*     <div class="NavBarProfilePlacement"> *@
            @*         <div class="NavBarProfileElement element-animation"> *@
            @*             <ul class="nav flex-column"> *@
            @*                 <div class="nav-link NavBarLinkPadding"> *@
            @*                     <a href="/Login">Login</a> *@
            @*                 </div> *@
            @*                 <div class="nav-link NavBarLinkPadding"> *@
            @*                     <a href="/Register">Register</a> *@
            @*                 </div> *@
            @*             </ul> *@
            @*         </div> *@
            @*     </div> *@
            @* </li> *@

            <li class="nav-item dropdown">
                @if (User.Identity.IsAuthenticated)
                {
                    <a class="nav-link dropdown-toggle fas fa-user fa-lg fa-lg mt-2 mr-2" href="#" id="ProfileNavElement" 
                       style="margin-left: 0.5em; color: deepskyblue"
                       role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    </a>
                    <div class="dropdown-menu element-animation" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="/Profile">Profile</a>
                        @if (User.IsInRole("Admin"))
                        {
                            <a class="dropdown-item" href="/AdminDashboard">Admin Dashboard</a>
                        }
                        <a class="dropdown-item" href="/Logout">Logout</a>
                    </div>
                }
                else
                {
                    <a class="nav-link dropdown-toggle fas fa-user fa-lg fa-lg mt-2 mr-2" href="#" id="ProfileNavElement" 
                       style="margin-left: 0.5em;"
                       role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    </a>
                    <div class="dropdown-menu element-animation" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="/Login">Login</a>
                        <a class="dropdown-item" href="/Register">Register</a>
                    </div>
                }
            </li>
            <li class="nav-item">
                <a class="nav-link fas fa-heart fa-lg mt-2 mr-2" data-toggle="tooltip"
                   data-placement="top" title="Your Wishlist" style="color: deepskyblue"
                   href="/WishList">
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link fas fa-shopping-cart fa-lg mt-2 mr-2"
                   data-toggle="tooltip"
                   data-placement="top" title="Your Cart" style="color: deepskyblue"
                   href="/ShoppingCart">
                </a>
            </li>
        </ul>
    </nav>
    @RenderBody()
    <hr/>
    <footer>
        <a href="/Contact">Contact</a>
        <p>&copy; 2018 - ProjectC</p>
    </footer>
    <script src="~/dependencies/Bootstrap_project/js/bootstrap.js"></script>
</div>
</body>
</html>
