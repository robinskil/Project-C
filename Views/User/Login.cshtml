    <div class="row justify-content-center">
        <div>
            <h3>Login</h3>
            <hr style="margin-bottom:8px" />
            <div class="row">
                <div class="col-sm-12 col-md-6" style="border-right : 1px solid rgba(0, 0, 0, 0.1); margin-top: -8.3px">
                    @*<form style="margin-top: 13px">
